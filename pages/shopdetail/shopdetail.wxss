/* shopdetail.wxss */
.shop,.change-buy,.graphic{
  width: 100%;
  font-family: "Microsoft YaHei";
}
.shop-top{
  position: relative;
}
.swiper-detail{
  width: 100%;
  height: 740rpx;
}
.swiper-detail .img-item{
  width: 100%;
  height: 740rpx;
  display: block;
}
.swiper-detail .img-item image{
  width: 100%;
  height: 100%;
  display: block;
}
.shop-pagination{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  display: block;
  right: 42rpx;
  bottom: 42rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  -webkit-border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
}
.shop-pagination .img-curr{
  font-size: 32rpx;
}
.shop-pagination text{
  font-size: 24rpx;
  color: #fff;
}
.shop-detail{
  width: 90%;
  padding: 28rpx 5%;
}
.shop-detail .shop-detail-name{
  font-size: 32rpx;
  color: #333;
  line-height: 42rpx;
  display: block;
}
.shop-detail .remarks{
  font-size: 26rpx;
  color: #ff671e;
  padding: 20rpx 0;
  display: block;
}
.shop-detail .money{
  font-size: 32rpx;
  color: #ff671e;
}
.shop-detail .money .int{
  font-size: 42rpx;
  color: #ff671e;
}
.shop-detail .money .decimal{
  font-size: 24rpx;
  color: #ff671e;
}
.shop-detail .shop-output-to{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  padding-top: 30rpx;
}
.shop-detail .shop-output-to view{
  flex: 1;
  text-align: left;
  font-size: 24rpx;
  color: #666;
}
.bg-gray{
  background-color: #f1f1f1;
}
.h20{
  height: 20rpx;
  width: 100%;
}
.bt{
  border-bottom: 1rpx solid #f1f1f1;
}
.col-9{
  display: inline-block;
  width: 90%;
}
.col-1{
  display: inline-block;
  width: 10%;
}
.col-2{
  width: 20%;
  display: inline-block;
}
.col-7{
  width: 70%;
  display: inline-block;
}
.box-s{
  box-sizing: border-box;
}
.shop-option{
  width: 100%;
  display: block;
}
.shop-option .service-description,.shop-option .choose-role{
  width: 90%;
  padding: 0 5%;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 26rpx;
}
.shop-option .service-description .arrow,.shop-option .choose-role .arrow{
  text-align: right;
}
.shop-option .service-description .arrow icon,.shop-option .choose-role .arrow icon{
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
  background: url(/images/icon/index/next_black.png) no-repeat center;
  vertical-align: middle;
  background-size: 100%;
}
.ft-black{
  color: #333;
}
.result-select{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
}
.server-model,.change-buy{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9;
}
.server-model .server-model-cont,.change-buy .change-buy-con{
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fff;
  height: 60%;
  width: 100%;
}
.server-model .picker-modal-inner{
  position: relative;
}
.picker-modal-top{
  border-bottom: 1px solid #f1f1f1;
}
.picker-modal-top,.picker-modal-bot{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  width: 100%;
}
.picker-modal-cen{
  width: 90%;
  padding: 0 5%;
  overflow-y: scroll;
  height: 530rpx;
}
.picker-modal-bot{
  background-color: #ff671e;
  color: #fff;
}
.hide{
  display: none;
}
.change-buy-con{
  height: 50%;
}
.change-shopping-top{
  width: 90%;
  height: 210rpx;
  border-bottom: 1px solid #f1f1f1;
  display: -webkit-box;
  display: box;
  padding: 0 5%;
}
.change-shopping-top image{
  width: 236rpx;
  height: 236rpx;
  border-radius: 6rpx;
  -webkit-border-radius: 6rpx;
  border: 8px solid #f5f5f5;
  display: block;
  margin-top:-90rpx;
}
.change-shopping-top .change-info {
  margin-left: 30rpx;
}
.change-shopping-top .change-info text{
  display: block;
  font-size: 24rpx;
}
.change-shopping-top .change-info .change-info-price{
  color: #ff671e;
  font-size: 24rpx;
  padding-top: 8rpx;
  display: inline-block;
}
.change-shopping-top .change-info .change-info-price text{
  font-size: 42rpx;
  color: #ff671e;
  display: inline-block;
}
.change-shopping-top .change-info .change-info-no,.change-shopping-top .change-info .change-info-count{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}
.change-shopping-con{
  width: 90%;
  padding: 0 5%;
  height: 380rpx;
  overflow-y: scroll;
  padding-bottom: 98rpx;
}
.change-shopping-con .change-shopping-item{
  padding: 26rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}
.change-shopping-con .change-shopping-item .item-name{
  font-size: 30rpx;
  color: #333;
}
.change-shopping-con .change-shopping-item  .item-about-list{
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  flex-wrap: wrap;
}
.change-shopping-con .change-shopping-item .item-about-list view{
  background: #f1f1f1;
  color: #333;
  font-size: 24rpx;
  padding: 10rpx 26rpx;
  margin-right: 20rpx;
  border-radius: 4rpx;
  -webkit-border-radius: 4rpx;
  margin-bottom: 10rpx;
}
.change-shopping-con .change-shopping-item .item-about-list .on{
  background: #ff671e;
  color: #fff;
}
.change-shop-btn{
  width: 100%;
  height: 98rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.change-shop-btn .change-shop-op-btn{
  display: flex;
  -webkit-display:flex;
  height: 98rpx;
  line-height: 98rpx;
}
.change-shop-btn .change-shop-op-btn view{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.change-shop-btn .change-shop-op-btn .addcar{
  background-color: #ffbc00;
}
.change-shop-btn .change-shop-op-btn .buy{
  background-color: #ff671e;
}
.pull-up{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  background-color: #f1f1f1;
}
.pull-up .arrow-up{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  transform: rotate(270deg);
  background: url(/images/icon/index/next_black.png) no-repeat center;
  vertical-align: middle;
  margin-right: 10rpx;
  background-size: 100%;
}
.pull-up text{
  font-size: 24rpx;
  color: #333;
}

/*图文详情*/
.graphic{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.graphic .graphic-cont{
  width: 100%;
  height: 92%;
  overflow-y: scroll;
  background: #fff;

}
.graphic .graphic-tabbar{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 100%;
  background: #f00;
}
.graphic .graphic-cont .graphic-nav{
  width: 100%;
  border-bottom: 1rpx solid #f1f1f1;
  height: 90rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
}
.graphic .graphic-cont .graphic-nav view{
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.graphic .graphic-cont .graphic-nav view.on{
  border-bottom: 2rpx solid #ff671e;
  color: #ff671e;
}



























