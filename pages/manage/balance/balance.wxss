/* balance.wxss */
page{
  background-color: #f1f1f1;
}
.balance-top{
  width: 100%;
  background: url(/images/icon/me/bg_myremainingcorn.png) no-repeat center;
  height: 360rpx;
}
.balance-top .all_coin{
  font-size: 72rpx;
  color: #fff;
  text-align: center;
  display:block;
  padding-top:125rpx;
}
.withdraw{
  width: 100%;
  background: #fff;
  height: 100rpx;
}
.withdraw .withdraw-btn{
  width: 100%;
  font-size: 36rpx;
  color: #333;
  text-align: center;
  padding-top: 36rpx;
}
.balance-title{
  width: 90%;
  padding: 0 5%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666;
}
.balance{
  width: 100%;
  background-color: #fff;
}
.balance .balance-item{
  padding: 30rpx 5%;
  width: 90%;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  flex-direction: row;
}
.balance .balance-item .balance-item-l .item-name{
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.balance .balance-item .balance-item-l .item-time{
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}
  
.balance .balance-item .balance-item-r .item-status{
  font-size: 30rpx;
  color: #999;
  text-align:right;

}
.balance .balance-item .balance-item-r .item-num{
  font-size: 30rpx;
  margin-top: 20rpx;
  text-align:right;

}
.ft-red{
  color: #ff671e;
}
.ft-yes{
  color: #ffbc00;
}
.ft-line{
  text-decoration: line-through;
}

.no-balance{
  background: #fff;
  padding-top: 210rpx;
  padding-bottom: 100rpx;
  width: 100%;
}
.no-balance image{
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto;
  display: block;
}
.no-balance text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}